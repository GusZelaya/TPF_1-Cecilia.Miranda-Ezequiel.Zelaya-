#include <stdio.h>
#include <time.h>
#include <stdlib.h>
#include <math.h>
#include <stdbool.h>
/*
 * defines para facilitar el entendimiento del codigo
 */
#define BLANCO 1
#define NEGRO 0
#define PERSONA 1
#define PC 0

char tablero [16][16];
/*
 * funcion encargada de limpiar el buffer
 * limpia los restos dejados por el usuario en el caso de ser necesario
 */
void cleanBuffer()
{
    char c;
    while ((c = getchar()) != '\n');
}

/*
 * funcion encargada de general el tablero inicial
 * ---crea una matriz de 15x15
 * ---carga la matriz con N,B o - dependiendo si en el espacio
 * cargado pertenece al jugador negro, blanco o si el espacio est[a vacio
 *
 */
void tableroInicial(){
    srand(time(NULL));
    int i,j;
    for(i = 0;i<16;i++ ){
        for(j=0;j<16;j++){
            tablero[i][j] = '-';
            // est치 en el medio
            if((i==0 && j<5)|| (i==1 && j<5) || (i==2 && j<4) || (i==3 && j<3) || (i==4 && j<2) ){ //Posiciona las fichas Negras
        tablero[i][j] = 'N';
      }
      if((i==11 && j>13) || (i==12 && j>12) || (i==13 && j>11) || (i==14 && j>10) || (i==15 && j>10) ){ //Posiciona las fichas Blancas
        tablero[i][j] = 'B';
      }
    }
  }
}

/*
 * funcion que imprime el tablero
 */
void imprimirTablero(){
    //Imprime tablero
    int i,j;
    printf("Tablero:\n");
    printf("\t ");
    for(i=0;i<16;i++){
        printf("\t %d",i);
    }
    printf("\n");
    for(i=0;i<16;i++){
        printf("\t %d",i);
        for(j=0;j<16;j++){
            printf("\t %c", tablero[i][j]);
        }
        printf("\n");
    }
}
/*
 * estructura de datos cadena
 * --- puntero de caracteres
 * --- cantidad de caracteres utilizables
 * --- cantidad de caracteres utilizados
 */
typedef struct string{
	char* array;
	unsigned int charsTotales;
	unsigned int charsUsados;
}string;

/*
 * funcion encargada de guardar en diferentes vectores los datos ingresados por el usuario para el desarrollo de la partida
 * -->llama a los vectores con punteros
 *    ingresa los datos del usuario en los vectores correspondientes
 *    recibe y valida los datos del usuario para cada dato.
 * -->cualquier nombre es valido
 * -->maneras de optimizar: lograr meter cada vector en un vector maestro
 *    para luego invocar los datos necesarios usando los indices del vector maestro.
 */
int UserData(char *nombre, char *lado, char *turno) {
    printf("BIENVENIDO A HOPPITI!\nIngrese el nombre del jugador: ");
    scanf("%s",nombre);
    cleanBuffer();
    printf("ELIJA SU LADO: Jugador Blanco --> 1 | Jugador Negro --> 2\nsi desea aleatorizar la configuraci칩n de la partida--> 3\n");
    while (*lado != '1' && *lado != '2' && *lado !='3') {
        *lado = getchar();
        /*
         * permite al usuario elegir que se aleatorize la configuracion de la partida mediante un rand
         * si el usuario elige esta opcion al asignar los valores a los punteros se invoca un return para terminar la funcion
         */
        if (*lado=='3')
        {
          *lado=(rand()%2)+1;
          *turno=(rand()%2)+1;
          return 0;
        }
        if (*lado != '1' && *lado != '2') {
          cleanBuffer();
            printf("Valor invalido. Intenta nuevamente.\n");
        }
    }
    cleanBuffer();
    printf("QUIEN EMPIEZA EL JUEGO? Usuario --> 1 | Maquina --> 2\n");
    *turno = getchar();

    while (*turno != '1' && *turno != '2')
    {
        printf("Valor invalido. Intenta nuevamente.\n");
        *turno = getchar();
        cleanBuffer();
    }
    cleanBuffer();
    return 0;
}
/*
 * estrutura empleada para almacenar las coordenadas de la jugada realizada
 * o de la ficha a mover
 */
typedef struct coord{
  int x;
  int y;
}coord;

/*
 * funcion encargada de que el usuario ingrese las coordenadas de la ficha que quiere mover
 */
void elegirCoord(char* mensaje,coord* coordenada){ //imprime el mensaje enviado y el vector para asignar las jugadas al jugador que llama la funcion

  printf("%s\n",mensaje);
  coordenada->x=-1;//asigna un valor inicial a las variables x e y
  coordenada->y=-1;
  while (((coordenada->x <0) || (coordenada->x > 15)))
  {
    printf("ingrese la posici칩n en x para la ficha que desea mover: ");
    scanf("%d", &coordenada->x);// carga la jugada en x
  }
  while (coordenada->y<0 || coordenada->y>15)
    {
      printf("ingrese la posici칩n en y para la ficha que desea mover: ");
      scanf("%d", &coordenada->y);// carga la jugada en y
    }

}
/*
 * funcion encargada de verificar si la ficha elegida por el jugador es saltable o no
 */
int saltable(int tablero[16][16],int coord[4]){
    bool validooo = false;
    int diffI = (coord[2]-coord[0])/2;//calcula la diferencia de espacios en i, analogamente se hace lo mismo abajo para j
    int diffJ = (coord[3]-coord[1])/2;
    int midPosicI = coord[0] + diffI, midPosicJ = coord[1] + diffJ;
    //-midPosic es la coordenada de la pieza a la que se quiere saltar
    validooo = (tablero[midPosicI][midPosicJ] == '-')? false: true;
    validooo = (diffI == 0 && diffJ == 0)? false: validooo;
    return validooo;
}
/*
 * jugada encargada de chequear la jugada
 */
int checkJugada(coord pcActual,coord pcSiguiente){
    int coord[4] = {pcActual.x,pcActual.y,pcSiguiente.x,pcSiguiente.y};
    bool validooo = false;
    int absDiffI = abs(coord[0]-coord[2]);
    int absDiffJ = abs(coord[1]-coord[3]);
    //No se puede seleccionar una pieza vacia
    if(tablero[coord[0]][coord[1]] == '-' && coord[0] == coord[2] && coord[1] == coord[3]){
        return false;
    }
    if(absDiffI <= 1 && absDiffJ <= 1){
        validooo = (tablero[coord[2]][coord[3]] == '-')? true: false;
    }else{//es un salto
        if((absDiffI == 2 && absDiffJ == 2) || (absDiffI == 0 && absDiffJ == 2) || (absDiffI == 2 && absDiffJ == 0) ){
            validooo = (tablero[coord[2]][coord[3]] != '-')? false: saltable(tablero,coord);
        }
    }
    return validooo;
}
/*
 * jugada encargada de cargar la jugada de la maquina
 */
int coinFlip( int range){
  static int aaa= 0;
  (aaa== 0)? srand(time(NULL)):1;
  aaa++;
  return rand()%(range+1);
}
/*
 * deja el rango de jugadas posibles entre 0 y 15, dentro de la matriz
 */
int rango(int number){
  return 0<=number && number<=15;
}
/*
 * funcion principal donde da el juego en si
 */
void juegoPurete(char *nombre,unsigned int colorJugador, unsigned int turno){
  coord jugadorActual;
  coord jugadorSiguiente;
  coord pcActual;
  coord pcSiguiente;

  int victoria = 0;

  while(victoria == 0){
    	char bandera = 0;
    	if(turno == PERSONA){
    		printf("Juega %s con el color %s\n",nombre,colorJugador == BLANCO?"Blanco":"Negro");
			do{
				  elegirCoord("Elija la posicion inicial",&jugadorActual);
				  elegirCoord("Elija la posicion a mover",&jugadorSiguiente);
				  if(tablero[jugadorActual.x][jugadorActual.y] == (colorJugador = BLANCO?'B':'N'))
					  bandera = checkJugada(jugadorActual,jugadorSiguiente);
			}while(bandera == 0);
			tablero[jugadorActual.x][jugadorActual.y] = '-';
			tablero[jugadorSiguiente.x][jugadorSiguiente.y] = (colorJugador = BLANCO?'B':'N');
			victoria=(colorJugador = BLANCO?victoriaBlanco():victoriaNegro());
			imprimirTablero();
			if (victoria!=0)
			{
			  printf("VICTORIA DE %s", nombre);
			  break;
			}
    	}
    	else{
    		printf("Juega la maquina con el color %s\n",colorJugador == NEGRO?"Blanco":"Negro");
			do{
			  pcSiguiente.x = coinFlip(15);
			  pcSiguiente.y = coinFlip(15);
			  pcActual.x = coinFlip(15);
			  pcActual.y = coinFlip(15);
			  if(tablero[pcActual.x][pcActual.y] == (colorJugador = NEGRO?'B':'N'))
				  bandera =  checkJugada(pcActual,pcSiguiente);
			}while(bandera == 0);
			tablero[pcActual.x][pcActual.y] = '-';
			tablero[pcSiguiente.x][pcSiguiente.y] = (colorJugador = NEGRO?'B':'N');
			imprimirTablero();
			victoria=(colorJugador = NEGRO?victoriaBlanco():victoriaNegro());
			if (victoria!=0)
			{
			  printf("VICTORIA DE LA MAQUINA");
			  break;
			}

    	}
    	turno=!turno;
  	  }

}

/*
 * funcion encargada de verificar si el jugador blanco gana la partida
 * verifica la parte superior de una hipotetica diagonal secundaria que se
 * da en la ezquina superior derecha del tablero
 */
int victoriaBlanco()
{
  int cont=0;
    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 3 - i; j++) {
            if (tablero[i][j]== 'B'){
                cont+=1;
            }
        }
    }
  if (tablero[1][4]=='N')
  {
    cont+=1;
  }
  if (tablero[2][3]=='N')
  {
    cont+=1;
  }
  if (tablero[3][2]=='N')
  {
    cont+=1;
  }
  if (tablero[4][1]=='N')
  {
    cont+=1;
  }
    if (cont==19)
    {
      return 1;
    }
    return 0;
}
/*
 * funcion encargada de verificar si el jugador negro gana la partida
 * verifica la parte superior de una hipotetica diagonal secundaria que se
 * da en la esquina inferior derecha
 */
int victoriaNegro()
{
  int cont=0;
  for (int i=11;i<16;i++)
  {
    for(int j=15;j>11;j--)
    {
      if (tablero[i][j])
      {
        cont+=1;
      }
    }
  }
  if (tablero[11][14]=='N')
  {
    cont+=1;
  }
  if (tablero[12][13]=='N')
  {
    cont+=1;
  }
  if (tablero[13][12]=='N')
  {
    cont+=1;
  }
  if (tablero[14][11]=='N')
  {
    cont+=1;
  }
  if (cont==19)
  {
    return 1;
  }
  return 0;
}
/*
 * en el main>
 * --- se inicia el tablero
 * --- se imprime el mismo
 *--- se crean los vectores para que el usuario settee la configuracion del juego
 *--- se llama a la funcion que inicia el juego
 */
int main()
{
    tableroInicial();
    imprimirTablero();
    char nombre[20];
    char lado[2];
    char turno[2];
    srand(time(NULL));
    UserData(nombre, lado, turno);//cargar datos para el juego
    unsigned int colorJugador = lado[0] =='1'?NEGRO:BLANCO;
    unsigned int turnoInicial = turno[0] == '1'?PERSONA:PC;
    juegoPurete(nombre,colorJugador,turnoInicial);
}
